{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true,
        "commonjs": true,
        "jquery": true
    },
    "globals": {
        "__dirname": true,
        "__webpack_public_path__": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "idiomatic"
    ],
    "rules": {
        "indent": [2, 4],
        "func-names": 0,
        "no-console": 0,
        "space-in-parens": 0,
        "object-curly-spacing": 0,
        "computed-property-spacing": 0,
        "no-inline-comments": 0,
         "linebreak-style": 0,
         "no-useless-escape": 0
    }
}
